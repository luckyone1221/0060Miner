						bpType: '1',
						tag: true,
						title: 'Комплект кабелей для блока питания под асики 5x6Pin',
						titleSm: true,
						imgNum: '4',
						grayTxt: undefined,
						price: '999 ₽',
					})
				.col-sm-6.col-xl-3
					+prodCard({
						bpType: '1',
						tag: true,
						title: 'Вентилятор JAMICON 120 мм 0,5A',
						titleSm: true,
						imgNum: '5',
						grayTxt: undefined,
						price: '599 ₽',
					})
				.col-sm-6.col-xl-3
					+prodCard({
						bpType: '1',
						tag: true,
						title: 'Решетка для вентилятора 120х120мм',
						titleSm: true,
						imgNum: '6',
						grayTxt: undefined,
						price: '12 999 ₽',
					})
				.col-sm-6.col-xl-3
					+prodCard({
						bpType: '1',
						tag: true,
						title: 'Переходник Sata - Molex',
						titleSm: true,
						imgNum: '7',
						grayTxt: undefined,
						price: '149 ₽',
					})
	// end sDetails

mixin sDetailsItem(data)
	.col-md-6.col-xl-4(class=`${data.bootClasses || ''}`)
		+e.item(href="#")
			+e.i-row.row.align-items-center
				+e.title-col.col
					+e.title=data.title
					+e.for=data.titleFor
				.col-auto.d-block
					+e.ball(class=`${data.ballClasses || ''}`)
						img(loading="lazy" src=`img/@2x/sDetails-img-${data.imgNum}.png` alt="")
