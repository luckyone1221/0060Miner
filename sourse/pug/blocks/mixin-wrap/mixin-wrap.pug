mixin range(c1, c2, Symb=false, fromTxt='От', toTxt='До')
	+b.range-wrap.price_slider_amount&attributes(attributes)
		input.range-slider.slider-js(type='text'  data-min=c1  data-max=c2)
		+e.row.row.align-items-end
			+e.col.col
				.form-group
					+e.up-inp-txt От
					+b.INPUT.input_from.form-control(type="text")
					if Symb
						.money-symb=Symb
			.col-auto
				+e.dash -
			+e.col.col
				.form-group
					+e.up-inp-txt До
					+b.INPUT.input_to.form-control(type="text")
					if Symb
						.money-symb=Symb